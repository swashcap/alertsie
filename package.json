{
  "name": "alertsie",
  "version": "1.0.0",
  "description": "Weather dashboard and alerts.",
  "main": "server/index.js",
  "scripts": {
    "browsersync": "browser-sync start -f '.tmp' -p 'localhost:3000' --port 3001",
    "build": "mkdir -p .tmp/{css,js}/ && parallelshell 'npm run build:css' 'npm run build:js'",
    "build:css": "cat node_modules/normalize.css/normalize.css components/*.css node_modules/c3/c3.min.css > .tmp/css/app.css",
    "build:js": "cat node_modules/d3/d3.min.js node_modules/c3/c3.min.js > .tmp/js/app.js",
    "clean": "rm -rf .tmp",
    "dev": "parallelshell 'nodemon --config .nodemonrc.json' 'npm run browsersync' 'npm run watch:css'",
    "lint": "eslint server",
    "start": "npm run clean && npm run build && node server/index.js",
    "test": "echo 'write some tests'",
    "watch:css": "chokidar 'components/*.css' -c 'npm run build:css'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swashcap/alertsie.git"
  },
  "keywords": [],
  "author": "Cory Reed <swashcap@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/swashcap/alertsie/issues"
  },
  "homepage": "https://github.com/swashcap/alertsie#readme",
  "dependencies": {
    "boom": "^4.2.0",
    "c3": "^0.4.11",
    "concat-stream": "^1.6.0",
    "d3": "^3.5.17",
    "glob": "^7.1.1",
    "good": "^7.1.0",
    "good-console": "^6.2.0",
    "good-squeeze": "^5.0.1",
    "handlebars": "^4.0.6",
    "hapi": "^16.0.2",
    "inert": "^4.0.4",
    "marked": "^0.3.6",
    "moment": "^2.17.1",
    "normalize.css": "^5.0.0",
    "pify": "^2.3.0",
    "plotly.js": "^1.21.2",
    "sentence-case": "^2.1.0",
    "vision": "^4.1.1"
  },
  "devDependencies": {
    "browser-sync": "^2.18.5",
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.12.2",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-plugin-import": "^2.2.0",
    "nodemon": "^1.11.0",
    "parallelshell": "^2.0.0",
    "pre-commit": "^1.2.2"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
